<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/loginbg"
    android:fitsSystemWindows="true">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/_10sdp">

        <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/registrationCard_viewAdd"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <RelativeLayout
                android:id="@+id/relativeLayoutForRegisterAdd"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginBottom="@dimen/_20sdp"
                android:layout_marginLeft="@dimen/_16sdp"
                android:layout_marginRight="@dimen/_16sdp"
                android:layout_marginTop="@dimen/_50sdp"
                android:fillViewport="true">

                <!-- <TextView
                     android:id="@+id/registerTextView"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:layout_centerHorizontal="true"
                     android:layout_marginTop="@dimen/_16sdp"
                     android:text="Register"
                     android:textColor="@color/btnColor"
                     android:textSize="@dimen/lblsignin" />-->

                <TextView
                    android:id="@+id/labelEmpcodeAdd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_3sdp"
                    android:layout_marginTop="@dimen/_16sdp"
                    android:text="Emp Code : "
                    android:textColor="@color/edittext"
                    android:textSize="@dimen/_11sdp" />

                <TextView
                    android:id="@+id/txtEmpCodeAdd"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_3sdp"
                    android:layout_marginTop="@dimen/_16sdp"
                    android:layout_toRightOf="@+id/labelEmpcodeAdd"
                    android:textColor="@color/edittext"
                    android:textSize="@dimen/_15sdp" />

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/textInputLayouttName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txtEmpCode"
                    android:theme="@style/cardTheme">

                    <EditText
                        android:id="@+id/txtNameAdd"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_16sdp"
                        android:hint="Name"
                        android:inputType="textPersonName"
                        android:textColor="@color/edittext"
                        android:textSize="@dimen/_15sdp" />
                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/textInputLayoutemail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/textInputLayouttName"
                    android:theme="@style/cardTheme">

                    <EditText
                        android:id="@+id/txtEmailAdd"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_16sdp"
                        android:hint="Email"
                        android:inputType="textEmailAddress"
                        android:textColor="@color/edittext"
                        android:textSize="@dimen/_15sdp" />
                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/textInputLayoutMobileNo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/textInputLayoutemail"
                    android:theme="@style/cardTheme">

                    <EditText
                        android:id="@+id/txtMobileNoAdd"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_16sdp"
                        android:hint="Mobile No"
                        android:inputType="number"
                        android:textColor="@color/edittext"
                        android:textSize="@dimen/_15sdp" />
                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/textInputLayoutUserName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/textInputLayoutMobileNo"
                    android:theme="@style/cardTheme">

                    <EditText
                        android:id="@+id/txtUserNameAdd"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_16sdp"
                        android:hint="UserName"
                        android:inputType="textPersonName"
                        android:textColor="@color/edittext"
                        android:textSize="@dimen/_15sdp" />
                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/textInputLayoutpassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/textInputLayoutUserName"
                    android:theme="@style/cardTheme">

                    <EditText
                        android:id="@+id/txtpasswordAdd"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_40sdp"
                        android:layout_marginTop="@dimen/_16sdp"
                        android:hint="Password"
                        android:inputType="textPassword"
                        android:textColor="@color/edittext"
                        android:textSize="@dimen/_15sdp" />
                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/textInputLayoutWorkfor"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/textInputLayoutpassword"
                    android:theme="@style/cardTheme">

                    <EditText
                        android:id="@+id/txtWorkForAdd"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_16sdp"
                        android:editable="false"
                        android:hint="Work For"
                        android:textColor="@color/edittext"
                        android:textSize="@dimen/_15sdp" />
                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/textInputLayoutDateOfBirth"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/textInputLayoutWorkfor"
                    android:theme="@style/cardTheme">

                    <EditText
                        android:id="@+id/txtDateofBirthAdd"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_16sdp"
                        android:hint="Date of Birth "
                        android:inputType="text"
                        android:textColor="@color/edittext"
                        android:textSize="@dimen/_15sdp" />
                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/textInputLayoutAddress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/textInputLayoutDateOfBirth"
                    android:theme="@style/cardTheme">

                    <EditText
                        android:id="@+id/txtAddressAdd"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_16sdp"
                        android:hint="Address "
                        android:inputType="text"
                        android:textColor="@color/edittext"
                        android:textSize="@dimen/_15sdp" />
                </android.support.design.widget.TextInputLayout>

                <Spinner
                    android:id="@+id/spinnerAssignRoleAdd"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/textInputLayoutAddress"
                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="@dimen/_3sdp"
                    android:layout_marginTop="@dimen/_16sdp" />

                <RelativeLayout
                    android:id="@+id/relativelayoutbuttonandimageAdd"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/spinnerAssignRoleAdd"
                    android:layout_marginLeft="@dimen/_1sdp"
                    android:layout_marginTop="@dimen/_16sdp">

                    <LinearLayout
                        android:id="@+id/btnUploadLinearLayout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_marginRight="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_16sdp">

                        <Button
                            android:id="@+id/uploadProfileButtonAdd"
                            android:layout_width="@dimen/_105sdp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/_5sdp"
                            android:layout_marginRight="@dimen/_5sdp"
                            android:text="Upload Photo"
                            android:textColor="#fd2929"
                            android:textSize="@dimen/_12sdp" />

                        <Button
                            android:id="@+id/uploadIdProofButtonAdd"
                            android:layout_width="@dimen/_105sdp"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="@dimen/_5sdp"
                            android:text="Upload Photo ID"
                            android:textColor="#fd2929"
                            android:textSize="@dimen/_12sdp" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/imageViewLinearLayoutAdd"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_below="@+id/btnUploadLinearLayout"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_marginRight="@dimen/_10sdp">

                        <ImageView
                            android:id="@+id/profileImageAdd"
                            android:layout_width="@dimen/_100sdp"
                            android:layout_height="@dimen/_100sdp"
                            android:layout_marginLeft="@dimen/_5sdp"
                            android:layout_marginRight="@dimen/_5sdp" />

                        <ImageView
                            android:id="@+id/idProofImageAdd"
                            android:layout_width="@dimen/_100sdp"
                            android:layout_height="@dimen/_100sdp"
                            android:layout_marginRight="@dimen/_5sdp" />
                    </LinearLayout>
                </RelativeLayout>

                <Button
                    android:id="@+id/btnSubmitRegisterAdd"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/relativelayoutbuttonandimageAdd"
                    android:layout_marginBottom="@dimen/_16sdp"
                    android:layout_marginTop="@dimen/_16sdp"
                    android:background="@color/btnColor"
                    android:text="Submit"
                    android:textColor="@color/signInTextColor"
                    android:textSize="@dimen/_15sdp" />
            </RelativeLayout>
        </android.support.v7.widget.CardView>
    </ScrollView>
</RelativeLayout>