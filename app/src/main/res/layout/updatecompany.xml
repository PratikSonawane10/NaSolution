<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.nasolution.com.nasolution.UpdateCompany">

        <ScrollView
            android:id="@+id/scrollviewUpdateCompany"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_10sdp"
            android:scrollbars="none">

            <LinearLayout
                android:id="@+id/updateCompanyLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_30sdp"
                android:layout_marginLeft="@dimen/_12sdp"
                android:layout_marginRight="@dimen/_12sdp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/lblUpdateCompanyInfo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_16sdp"
                    android:text="Update Company Information"
                    android:textSize="@dimen/_15sdp"
                    android:textStyle="bold" />

                <Spinner
                    android:id="@+id/spinnerUpdateClient"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:layout_marginRight="@dimen/_5sdp"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:textSize="@dimen/_15sdp" />

                <EditText
                    android:id="@+id/txtUpdateCompanyName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_16sdp"
                    android:hint="Update Company Name"
                    android:inputType="text"
                    android:textColor="@color/edittext"
                    android:textSize="@dimen/_15sdp" />

                <EditText
                    android:id="@+id/txtUpdateCompanyEmail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_16sdp"
                    android:hint="Update Email"
                    android:inputType="textEmailAddress"
                    android:textColor="@color/edittext"
                    android:textSize="@dimen/_15sdp" />

                <EditText
                    android:id="@+id/txtUpdateCompanyAddress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_16sdp"
                    android:hint="Update Address"
                    android:inputType="text"
                    android:textColor="@color/edittext"
                    android:textSize="@dimen/_15sdp" />

                <Spinner
                    android:id="@+id/spinnerUpdateCompanyState"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:textSize="@dimen/_15sdp" />

                <Spinner
                    android:id="@+id/spinnerUpdateCompanyDistrict"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:textSize="@dimen/_15sdp" />

                <EditText
                    android:id="@+id/txtUpdateCompanyCity"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_16sdp"
                    android:hint="Update City"
                    android:inputType="text"
                    android:textColor="@color/edittext"
                    android:textSize="@dimen/_15sdp" />

                <EditText
                    android:id="@+id/txtUpdateCompanyLandmark"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_16sdp"
                    android:hint="Update Landmark"
                    android:inputType="text"
                    android:textColor="@color/edittext"
                    android:textSize="@dimen/_15sdp" />

                <EditText
                    android:id="@+id/txtUpdateCompanyPincode"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_16sdp"
                    android:hint="Update Pincode"
                    android:inputType="text"
                    android:textColor="@color/edittext"
                    android:textSize="@dimen/_15sdp" />

                <Button
                    android:id="@+id/btnSubmitUpdateCompany"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:background="@color/btnColor"
                    android:text="Update "
                    android:textColor="@color/colorWhite" />
            </LinearLayout>
        </ScrollView>
    </RelativeLayout>
</android.support.design.widget.CoordinatorLayout>
